<UserControl x:Class="Platformer.Views.Settings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Platformer.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <FontFamily x:Key="FontTest">/GameResources/Font/#KenVector Future</FontFamily>
    </UserControl.Resources>
    <Grid>
        <Image Source="/GameResources/Textures/bg.png" Stretch="Fill"></Image>
        <Slider x:Name="VolumeSlider" HorizontalAlignment="Center" Margin="0,85,0,0" VerticalAlignment="Top" Width="120" ValueChanged="VolumeSlider_ValueChanged"/>
        <Button Content="Vissza" HorizontalAlignment="Left" Margin="32,400,0,0" VerticalAlignment="Top" Width="60" FontFamily="{StaticResource FontTest}" Click="HideSettings"/>
        <Label Content="Hangerö" HorizontalAlignment="Left" Margin="247,82,0,0" VerticalAlignment="Top" Width="77" FontFamily="{StaticResource FontTest}"/>
        <Label x:Name="VolumeLabel" Content="" Margin="472,81,318,343" HorizontalContentAlignment="Left"/>
    </Grid>
</UserControl>

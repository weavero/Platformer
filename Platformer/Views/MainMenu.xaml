<UserControl x:Class="Platformer.Views.MainMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Platformer.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="MidnightBlue">
        <StackPanel>
            <TextBlock HorizontalAlignment="Center" Margin="50" Foreground="White" FontSize="42">Platformer</TextBlock>
            <Button Width="120" Height="20" Margin="10" Click="NewGame">Új játék</Button>
            <Button Width="120" Height="20" Margin="10"></Button>
            <Button Width="120" Height="20" Margin="10" Click="Leaderboard">Ranglista</Button>
            <Button Width="120" Height="20" Margin="10" Click="Exit">Kilépés</Button>
        </StackPanel>
    </Grid>
</UserControl>

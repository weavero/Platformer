<UserControl x:Class="Platformer.Views.GameOver"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Platformer.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.Background>
            <SolidColorBrush Color="Black" Opacity="1"/>
        </Grid.Background>
        <StackPanel>
            <TextBlock Foreground="Red" HorizontalAlignment="Center" Margin="50" FontSize="30">Elfogytak az életeid</TextBlock>
            <Button Width="120" Height="20" Margin="20" Click="RestartGame">Újrakezdés</Button>
            <Button Width="120" Height="20" Click="ToMainMenu">Kilépés a főmenübe</Button>
        </StackPanel>
    </Grid>
</UserControl>
